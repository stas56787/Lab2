@{
    ViewData["Title"] = "TVShow";
}

<div class="row">
    <div class="col-md-5">
        <form method="post" action="tvshow">
            <div>
                <label>Форма для заполнения</label>
            </div>
            <div>
                <label>
                    Название шоу
                    <input type="text" name="name" />
                </label>
            </div>
            <div>
                <label>
                    Длительность
                    <input type="text" name="duration" />
                </label>
            </div>
            <div>
                <label>
                    Рейтинг
                    <input type="text" name="rating" />
                </label>
            </div>
            <div>
                <label>
                    Описание
                    <input type="text" name="description" />
                </label>
            </div>
            <div>
                <label>
                    <input type="submit" value="Отправить" />
                </label>
            </div>
        </form>
    </div>
    <div class="col-md-5">
        Информация о ТВ шоу
        <table style="width:500px;" border="1px">
            @{
                for (int i = 0; i < 5; i++)
                {
                    <tr>
                        <td>Название шоу @i</td>
                        <td>Длительность @i</td>
                        <td>Рейтинг @i</td>
                        <td>Описание @i</td>
                    </tr>
                }
            }
        </table>
        <div class="tvshows"></div>
    </div>
</div>